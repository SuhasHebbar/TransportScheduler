defmodule TS.BucketTest do
  use ExUnit.Case, async: true

  setup do
    {:ok, bucket} = TS.Bucket.start_link
    {:ok, bucket: bucket}
  end

  test "stores values by key", %{bucket: bucket} do
    assert TS.Bucket.get(bucket, "delay") == nil

    TS.Bucket.put(bucket, "delay", 0.38)
    assert TS.Bucket.get(bucket, "delay") == 0.38
    
    TS.Bucket.delete(bucket, "delay")
    assert TS.Bucket.get(bucket, "delay") == nil
    
    TS.Bucket.put(bucket, "delay", 0.38)
    assert TS.Bucket.get(bucket, "delay") == 0.38
    
    TS.Bucket.put(bucket, "congestion", "low")
    assert TS.Bucket.get(bucket, "congestion") == "low"
    #assert TS.Bucket.get(bucket, "delay") == 0.38*2
    assert TS.Bucket.get(bucket, "delay") == 0.38
    
    TS.Bucket.put(bucket, "disturbance", "yes")
    assert TS.Bucket.get(bucket, "disturbance") == "yes"
    
  end
end


